@using MVC.Helpers
@model UpdateSupplierDTO
@inject UserService UserService

@{
    ViewData["Title"] = "Tedarikçi Düzenle";
    var user = UserService.GetSessionUser();
    
}
<div class="container mt-4">
    <div class="text-center mb-4">
        <h2>Tedarikçi Düzenle</h2>
        <hr />
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            @if (TempData["WarningMessage"] != null)
            {
                <div id="successMessage" class="alert alert-warning text-center">
                    @TempData["WarningMessage"]
                </div>
            }
        
            <form asp-action="UpdateSupplier" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="UpdateBy" value="@user.SicilNo" />
                <div class="form-group mb-3">
                    <label asp-for="SupplierCode" class="form-label">Tedarikçi Kodu</label>
                    <input asp-for="SupplierCode" class="form-control" required />
                    <div class="invalid-feedback mb-4 ml-5 text-start " style="font-size: 1rem;">
                        Tedarikçi kodu giriniz.
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SupplierName" class="form-label">Tedarikçi Adı</label>
                    <input asp-for="SupplierName" class="form-control" required />
                    <div class="invalid-feedback mb-4 ml-5 text-start " style="font-size: 1rem;">
                        Tedarikçi adı giriniz.
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="NotificationTo" class="form-label">Bildirim Gönderilecek</label>
                    <input asp-for="NotificationTo" class="form-control" required />
                    <div class="invalid-feedback mb-4 ml-5 text-start " style="font-size: 1rem;">
                        Mail giriniz.
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="form-check">
                        <input asp-for="Active" class="form-check-input" type="checkbox" />
                        <label asp-for="Active" class="form-check-label">Aktif</label>
                    </div>
                    <span asp-validation-for="Active" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
